{
  "name": "apay-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "A-Pay - Sistema de Controle de Pedidos Multi-Estabelecimento",
  "scripts": {
    "install:all": "pnpm install && cd backend && pnpm install && cd ../frontend && pnpm install",
    "dev": "concurrently -n backend,frontend -c blue,green \"pnpm dev:backend\" \"pnpm dev:frontend\"",
    "dev:backend": "cd backend && pnpm dev",
    "dev:frontend": "cd frontend && pnpm dev",
    "build": "pnpm build:backend && pnpm build:frontend",
    "build:backend": "cd backend && pnpm build",
    "build:frontend": "cd frontend && pnpm build",
    "test": "pnpm test:backend && pnpm test:frontend",
    "test:backend": "cd backend && pnpm test",
    "test:frontend": "cd frontend && pnpm test",
    "prisma:migrate": "cd backend && pnpm prisma:migrate",
    "prisma:seed": "cd backend && pnpm prisma:seed",
    "prisma:studio": "cd backend && pnpm prisma:studio",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "setup": "pnpm install:all && pnpm docker:up && sleep 5 && pnpm prisma:migrate && pnpm prisma:seed",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules backend/dist frontend/dist"
  },
  "keywords": [
    "pos",
    "restaurant",
    "food-truck",
    "orders",
    "multi-tenant"
  ],
  "author": "Talles Nicacio",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "supabase": "^2.51.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
